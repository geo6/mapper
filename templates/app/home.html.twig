        </ul>
    </div>

    <!-- Tab panes -->
    <div class="sidebar-content">
        <div class="sidebar-pane" id="baselayers">
            <h1 class="sidebar-header">
                Baselayers
                <span class="sidebar-close"><i class="fas fa-caret-left"></i></span>
            </h1>
            {{ include('@app/partial/sidebar/baselayers.html.twig') }}
        </div>

        <div class="sidebar-pane" id="layers">
            <h1 class="sidebar-header">
                Layers
                <span class="sidebar-close"><i class="fas fa-caret-left"></i></span>
            </h1>
            {{ include('@app/partial/sidebar/layers.html.twig') }}
        </div>

        <div class="sidebar-pane" id="info">
            <h1 class="sidebar-header">
                Info
                <span class="sidebar-close"><i class="fas fa-caret-left"></i></span>
            </h1>
            {{ include('@app/partial/sidebar/info.html.twig') }}
        </div>

        <div class="sidebar-pane" id="about">
