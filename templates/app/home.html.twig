    <div class="sidebar-tabs">
        <ul role="tablist">
            <li><a href="#baselayers" role="tab"><i class="far fa-map"></i></a></li>
            <li><a href="#layers" role="tab"><i class="fas fa-database"></i></a></li>
            <li class="disabled"><a href="#info" role="tab"><i class="fas fa-info-circle"></i></a></li>
        </ul>

        <ul role="tablist">
