{% extends '@layout/default.html.twig' %}

{% block javascript %}
<script>
    window.app = {};
    window.app.baselayers = {{ baselayers | json_encode() | raw }};
    window.app.layers = {{ layers | json_encode() | raw }};
</script>
<script src="{{ asset('/js/mapper.min.js') }}"></script>
{% endblock %}

{% block content %}
