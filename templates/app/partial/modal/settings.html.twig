<div class="modal" id="modal-settings" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-tools"></i>
                    Layer settings
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form autocomplete="off">
                <div class="modal-body">
                    <span class="font-weight-bold"></span>
                    <hr>
                    <div class="mb-3">
                        <div><label class="form-label" for="layer-queryable-1">Queryable</label></div>
                        <div id="layer-queryable" class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="queryable" value="1" id="layer-queryable-1" autocomplete="off">
                            <label class="btn btn-outline-secondary" for="layer-queryable-1">On</label>

                            <input type="radio" class="btn-check" name="queryable" value="0" id="layer-queryable-0" autocomplete="off">
                            <label class="btn btn-outline-secondary" for="layer-queryable-0">Off</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="layer-label">Label</label>
                        <select class="form-select" name="label" id="layer-label">
                            <option value=""></option>
                            <option value="feature.id">Feature id</option>
                            <optgroup label="Feature property"></optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="layer-opacity">Opacity</label>
                        <input type="range" min="0" max="100" step="10" class="form-range" name="opacity"
                            id="layer-opacity">
                        <div id="layer-opacity-text" class="form-text text-end"></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="layer-color">Color</label>
                        <div class="form-check mb-1" hidden>
                            <input class="form-check-input" type="checkbox" value="1" id="layer-legend">
                            <label class="form-check-label" for="layer-legend">
                                Use colors from legend
                            </label>
                        </div>
                        <div class="form-check mb-1" hidden>
                            <input class="form-check-input" type="checkbox" value="1" id="layer-style">
                            <label class="form-check-label" for="layer-style">
                                Use style from file
                            </label>
                        </div>
                        <input type="color" class="form-control form-control-color" id="layer-color" name="color">
                        <div id="layer-color-text" class="form-text" hidden></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-outline-secondary" id="btn-settings-download">
                        <i class="fas fa-download"></i>
                        Download
                    </a>
                    <button type="submit" class="btn btn-primary" id="btn-settings-apply">Apply</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>