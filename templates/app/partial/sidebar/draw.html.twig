<div class="sidebar-pane" id="draw">
    <h1 class="sidebar-header">
        Draw
        <span class="sidebar-close"><i class="fas fa-caret-left"></i></span>
    </h1>

    <div class="mt-3">
        <div class="btn-group d-flex" role="group">
            <button type="button" class="btn btn-outline-primary w-100" id="btn-draw-clear" disabled>
                <i class="far fa-trash-alt"></i>
                Clear
            </button>
            <button type="button" class="btn btn-outline-primary w-100" id="btn-draw-export" disabled>
                <i class="fas fa-download"></i>
                Export
            </button>
        </div>

        <div class="list-group mt-3">
            <button type="button"
                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                data-type="point">
                Point
                <span id="draw-count-point" class="badge badge-light draw-count">0</span>
            </button>
            <button type="button"
                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                data-type="linestring">
                Line
                <span id="draw-count-linestring" class="badge badge-light draw-count">0</span>
            </button>
            <button type="button"
                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                data-type="polygon">
                Polygon
                <span id="draw-count-polygon" class="badge badge-light draw-count">0</span>
            </button>
        </div>

        <hr>

        <form id="btn-draw-properties" hidden>
            <div class="form-group">
                <label for="inputDrawName">Name</label>
                <input type="text" class="form-control" id="inputDrawName" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="textareaDrawDescription">Description</label>
                <textarea class="form-control" id="textareaDrawDescription"></textarea>
            </div>
            <div class="btn-group d-flex" role="group">
                <button type="submit" class="btn btn-outline-secondary w-100" id="btn-draw-cancel">
                    <i class="fas fa-times"></i>
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary w-100" id="btn-draw-save">
                    <i class="fas fa-check"></i>
                    Save
                </button>
            </div>
        </form>
    </div>
</div>