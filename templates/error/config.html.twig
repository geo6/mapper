{% extends '@layout/default.html.twig' %}

{% block title %}{{ status }} {{ reason }}{% endblock %}

{% block content %}
<div class="container">
    <h1>Oops!</h1>
    <h2>This is awkward.</h2>
    <p>We encountered a configuration error.</p>
    {% if message is defined %}
    <p class="alert alert-danger">
        {{ message }}
    </p>
    {% endif %}
</div>
{% endblock %}
